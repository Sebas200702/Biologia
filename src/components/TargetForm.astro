<form id="target-form" class=" dark:text-black flex-col hidden gap-4 mt-20  max-w-[400px] mx-auto">
    <h3 class="text-pretty text-lg font-bold">Crear nuevo objetivo</h3>
    <div class="flex flex-col gap-2">
        <label for="title" class="text-pretty text-base font-bold">Título del objetivo</label>
        <input type="text" id="title" name="title" class="w-full p-2 border-2 border-gray-300 rounded-lg" placeholder="Escribe el título del objetivo" />
        <span class="text-xs text-red-500 hidden" id="title-error">Título inválido</span>
    </div>
    <div class="flex flex-col gap-2">
        <label for="description" class="text-pretty text-base font-bold">Descripción del objetivo</label>
        <textarea id="description" name="description" class="w-full p-2 border-2 border-gray-300 rounded-lg" placeholder="Escribe la descripción del objetivo"></textarea>
        <span class="text-xs text-red-500 hidden" id="description-error">Descripción inválida</span>
    </div>
    <button type="submit" class="flex justify-center font-semibold text-pretty flex-row gap-1 px-4 py-2 bg-[#3f72af] rounded-3xl items-center transition-all duration-300 ease-in-out  hover:scale-[1.06]
    hover:opacity-100 mt-10">
        Guardar
    </button>
</form>
