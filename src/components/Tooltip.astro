---
const {text} = Astro.props;
const {id} = Astro.props;
interface Props {
    text: string;
    id?: string;
}
---
<div
        id={`tooltip-${id ? id : 'default'}`}
        role="tooltip"
        class="opacity-0  px-3 py-2 text-sm font-medium dark:text-white text-black transition-opacity duration-300 dark:bg-gray-700 rounded-lg shadow-sm  tooltip bg-slate-100 "
      >
        {text}
    <div class="tooltip-arrow" data-popper-arrow></div>
</div>
