---
type HealthyTip = {
  title: string;
  description: string;
  image: string;
  size: 'small' | 'medium' | 'large';
};

const healthyTips: HealthyTip[] = [
  {
    title: "Bebe agua regularmente",
    description: "Mantente hidratado bebiendo al menos 8 vasos de agua al día.",
    image: "/hydratation.webp",
    size: "large",
  },
  {
    title: "Haz ejercicio regularmente",
    description: "Realiza al menos 30 minutos de actividad física cada día.",
    image: "/excersice.webp",
    size: "medium"
  },
  {
    title: "Duerme lo suficiente",
    description: "Procura dormir de 7 a 9 horas cada noche para una buena salud.",
    image: "/sleep.webp",
    size: "medium",
  },
  {
    title: "Practica la meditación",
    description: "Dedica 10 minutos al día a la meditación para reducir el estrés.",
    image: "/meditation.webp",
    size: "medium",
  },
  {
    title: "Socializa regularmente",
    description: "Mantén conexiones sociales fuertes para mejorar tu salud mental y emocional.",
    image: "/socialize.webp",
    size: "small",
  },
  {
    title: "Come más frutas y verduras",
    description: "Incluye 5 porciones de frutas y verduras en tu dieta diaria.",
    image: "/fruits.webp",
    size: "large",
  },
  {
    title: "Limita el consumo de azúcar",
    description: "Reduce la ingesta de azúcares añadidos para mejorar tu salud general.",
    image: "/sugar.webp",
    size: "medium",
  },
  {
    title: "Come alimentos integrales",
    description: "Opta por granos integrales en lugar de refinados para obtener más nutrientes.",
    image: "/food.webp",
    size: "medium",
  },
  {
    title: "Practica la gratitud",
    description: "Anota tres cosas por las que estés agradecido cada día para mejorar tu bienestar mental.",
    image: "/grattitude.webp",
    size: "large",
  },
];

const sizeClasses: Record<'small' | 'medium' | 'large', string> = {
  small: 'col-span-1 row-span-1',
  medium: 'md:col-span-2 col-span-1 row-span-1',
  large: 'col-span-1 md:col-span-3 row-span-1',
};
---

<section id="tips" class="py-12 mt-20 px-4 sm:px-6 md:px-12 lg:px-8">
  <h2 class="text-3xl font-bold text-center mb-8 text-[#3f72af]">Tips de Hábitos Saludables</h2>
  <div class="grid grid-cols-1 md:grid-cols-5  gap-4 max-w-3xl w-full mx-auto">
    {healthyTips.map((tip, ) => (
      <div class={`group relative dark:bg-zinc-950/90 rounded-lg shadow-lg overflow-hidden ${sizeClasses[tip.size]}`} >
        <div class="relative aspect-video">
          <img src={tip.image} alt={tip.title} loading="lazy" class="absolute group-hover:scale-110 opacity-90 transition-all duration-300 ease-in-out inset-0 w-full h-full object-cover" />
        </div>
        <div class="p-4 md:p-6">
          <h3 class="text-md md:text-lg font-semibold mb-2">{tip.title}</h3>
          <p class="text-sm">{tip.description}</p>
        </div>
      </div>
    ))}
  </div>
</section>
