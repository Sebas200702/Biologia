---
import Layout from '../layouts/Layout.astro';
import About from '../components/About.astro';
import Hero from '../components/Hero.astro';
const title = 'Inicio';
import { getSession } from 'auth-astro/server';
import type { Sesion } from '../types/types';
const sesion = await getSession(Astro.request);

---

<Layout title={title} pathname={Astro.url.pathname} sesion={sesion as Sesion}>
        <section class="w-full h-full  md:max-h-full flex  flex-col items-center">

    <h1 class="md:text-7xl text-5xl mt-28 text-pretty z-10 max-w-96 mx-auto text-[#3f72af] text-center  drop-shadow-2xl">Transforma tu Bienestar</h1>

    <p class="text-center text-xl mt-4">Descubre, aprende y crea hábitos que mejorarán tu vida
    </p>
        </section>
</Layout>
<style>
    @import url('https://fonts.googleapis.com/css2?family=Kanit:ital,wght@0,100;0,200;0,300;0,400;0,500;0,600;0,700;0,800;0,900;1,100;1,200;1,300;1,400;1,500;1,600;1,700;1,800;1,900&family=SUSE:wght@100..800&display=swap');
    h1 {
        font-family: "Kanit", sans-serif;
        font-weight: 600;
    }
</style>
